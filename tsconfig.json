{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "baseUrl": "./",
    "strict": true,
    "paths": {
      "@/*": [
        "src/renderer/*"
      ],
      "@common/*": [
        "src/common/*"
      ],
    },
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": [
    "src/renderer",
    "src/common"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}