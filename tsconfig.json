{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "compilerOptions": {
    "composite": true,
    "importHelpers": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "paths": {
      "@/*": [
        "./src/renderer/*"
      ],
      "@common/*": [
        "./src/common/*"
      ],
      "@electron/*": [
        "./src/electron/*"
      ],
    },
  },
  "include": [
    "src",
    ".eslintrc.js",
    "package.json",
    "vite.config.ts",
    "vitest.config.ts"
  ],
  "exclude": [
    "**/__mocks__",
    "tests",
    "node_modules",
    "dist"
  ],
  "references": [
    {
      "path": "./tsconfig.test.json"
    },
  ]
}