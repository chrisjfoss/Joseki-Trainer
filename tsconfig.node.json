{
  "compilerOptions": {
    "target": "ESNext",
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "preserve",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/renderer/*"
      ],
      "@common/*": [
        "src/common/*"
      ],
    }
  },
  "include": [
    "package.json",
    "src/electron",
    "vite.config.ts",
    ".eslintrc.js"
  ]
}